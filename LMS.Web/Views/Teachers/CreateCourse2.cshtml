@model Lms.Core.Models.ViewModels.TeacherCreateCourseViewModel

<h4 class="card-title text-center">Add course</h4>
<form asp-action="CreateCourse">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-outline mb-4">
        <label asp-for="CourseName" class="form-label"></label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <label asp-for="CourseStartDate" class="form-label"></label>
                <input asp-for="CourseStartDate" class="form-control" />
                <span asp-validation-for="CourseStartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                <label asp-for="CourseEndDate" class="form-label"></label>
                <input asp-for="CourseEndDate" class="form-control" />
                <span asp-validation-for="CourseEndDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <!-- Message input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form6Example7">Description</label>
        <textarea asp-for="CourseDescription" class="form-control" id="form6Example3" rows="4"></textarea>
        <span asp-validation-for="CourseDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="Teachers"> Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}