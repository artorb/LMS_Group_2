@model IEnumerable<Lms.Core.Models.ViewModels.TeacherLoginViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome Teacher!</h1>

<h3>Kurser</h3>

<form asp-action="Search" id="search-course" asp-controller="Teachers">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Enter course name..." name="CourseName">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
</form>
<a class="btn btn-primary" asp-action="CreateCourse" asp-controller="Teachers"> Add new course </a>


<section class="mb-5">
    <div class="table-responsive bg-blurry shadow-4-strong rounded">
        <table class="table table-borderless table-hover align-middle mb-0 ">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Course.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActiveModuleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NextModuleName)
                </th>
                <th>
                    <p class="text-success">@TempData["ChangedParticipant"]</p>
                    @Html.DisplayNameFor(model => model.NumberOfParticipants)
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Teachers" asp-action="IndexCourseForTeacher" asp-route-id=@item.Course.Id>  @Html.DisplayFor(modelItem => item.Course.Name) </a>           
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActiveModuleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NextModuleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfParticipants)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</section>