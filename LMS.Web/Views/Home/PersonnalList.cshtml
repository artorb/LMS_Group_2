@using System.Security.Claims;
@model IEnumerable<Lms.Core.Models.ViewModels.PersonnalListViewModel>
@{
    ViewData["Title"] = "Personnal";
}

<h1>Personnal</h1>

<p style="text-align:center" class="text-success"><strong>@TempData["DeleteTeacher"]</strong></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @if (User.IsInRole("Teacher"))
                {
                    <td>
                        <a asp-controller="Teachers" asp-action="EditTeacher" asp-route-id="@item.Id">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                        @if (item.Id != User.FindFirst(ClaimTypes.NameIdentifier).Value)
                        {
                            <a asp-controller="Teachers" asp-action="DeleteTeacher" asp-route-id="@item.Id">Delete</a>
                        }
                        else
                        {
                            <p>Logged in user, can not delete</p>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>