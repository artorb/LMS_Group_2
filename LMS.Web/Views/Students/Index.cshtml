@{
    ViewData["Title"] = "Index";
}

<h1>Welcome Student!</h1>


<!-- Nav tabs -->
<div class="card text-center mw-100" style="width: 100%; flex: auto">
    <div class="card-header">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link buttonsOnIndexPageForStudent" asp-controller="Students" asp-action="CourseDetails"
                   data-ajax="true"
                   data-ajax-method="GET"
                   data-ajax-update="#getCourseWithAjax"
                   data-ajax-mode="replace">
                    Course information
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link buttonsOnIndexPageForStudent" asp-controller="Students" asp-action="CourseStudentsDetails"
                   data-ajax="true"
                   data-ajax-method="GET"
                   data-ajax-update="#getCourseWithAjax"
                   data-ajax-mode="replace">
                    Participants
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link buttonsOnIndexPageForStudent" asp-controller="Students" asp-action="ModuleList"
                   data-ajax="true"
                   data-ajax-method="GET"
                   data-ajax-update="#getCourseWithAjax"
                   data-ajax-mode="replace">
                    Module information
                </a>
            </li>
        </ul>
    </div>
    
    <div class="card-body">
        <div id="getCourseWithAjax"></div>
    </div>
</div>

