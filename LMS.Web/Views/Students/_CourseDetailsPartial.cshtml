@model Lms.Core.Models.ViewModels.StudentCourseViewModel


<br/>
<h4>@Html.DisplayFor(model => model.CourseName)</h4>
@* <hr/> *@

<div class="courseDetailsForStudent">
    <table class="table table-striped table-secondary table-borderless">
        <thead class="table-bordered table-dark">
        <tr>
            <th> @Html.DisplayNameFor(model => model.CourseStartDate) </th>
            <th> @Html.DisplayNameFor(model => model.CourseEndDate) </th>
            <th> @Html.DisplayNameFor(model => model.CourseDescription) </th>
            <th>@Html.DisplayNameFor(model => model.Documents)</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Documents)
        {
            <tr>
                <td> @Convert.ToDateTime(Model.CourseStartDate).ToString("yyyy/MM/dd HH:mm") </td>
                <td> @Convert.ToDateTime(Model.CourseEndDate).ToString("yyyy/MM/dd HH:mm") </td>
                <td> @Html.DisplayFor(m => Model.CourseDescription) </td>
                <td>
                    @Html.ActionLink(item.Name, "DownloadFile", "Download", new { filePath = item.HashName }, null)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
